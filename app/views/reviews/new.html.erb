<h1 class="mb-3">Add a review for <%= @restaurant.name %></h1>

<%= simple_form_for [@restaurant, @review] do |f| %>
  <%= f.input :rating, collection: 0..5, prompt: "Choose a rating" %>
  <%= f.input :content %>
  <%= f.button :submit, class: "btn btn-primary" %>
<% end %>

<%= link_to "Back", restaurant_path(@restaurant), class: "btn btn-link mt-3" %>
